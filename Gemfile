source 'https://rubygems.org'

gem 'rails'
gem 'bcrypt-ruby' 


group :development  do
  gem 'annotate'
end

group :development, :test do
  gem 'sqlite3'
  gem 'rspec-rails'
end

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'uglifier'
end

gem 'jquery-rails'

group :test do
  gem 'capybara'

  gem 'spork'
  gem 'win32-process'

  gem 'factory_girl_rails'

end

group :production do
  gem 'pg'
end


